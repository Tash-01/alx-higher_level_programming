#include "lists.h"

/**
 * check_cycle - checks if linked lists contains a cycle
 * @list: linked lists to be checked
 *
 * Return: 1 if the list has a cycle and 0 if it doesn't have a cycle
 */
int check_cycle(listint_t *list)
{
      listint_t *now = list;
      listint_t *later = list;

      if (!list)
              return (0);

      while (now && later && later->next)
      {
            now = now->next;
            later = later->next->next;
            if (now == later)
                   return (1);
      }

      return (0);
}
